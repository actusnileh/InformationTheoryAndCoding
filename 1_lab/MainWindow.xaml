<Window x:Class="deflate_lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deflate_lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="192" Width="378">
    <StackPanel Margin="10px">
        <Button Content="Выбрать файл" Height="41" Width="148" FontSize="18" Margin="0,0,0,10" Click="ButtonChooseFile"/>
        <TextBlock x:Name="SelectedFileTextBox" Text="Файл не выбран" Height="30" Width="Auto" TextAlignment="Center" FontSize="18" Margin="0,0,0,10" Foreground="LightGray"/>
        <Button Content="Закодировать" Height="41" Width="148" Click="Button_Click" FontSize="18"/>
    </StackPanel>
</Window>
