<Window xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Class="deflate_lab.MainWindow"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deflate_lab"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="DeflateLab" Height="205" Width="239">
    <materialDesign:Card Margin="5px">
        <StackPanel Margin="5px">
            <Button x:Name="ChooseFileButton" Content="Выбрать файл" Height="41" Width="Auto" FontSize="18" Margin="0,0,0,10" Click="ButtonChooseFile"/>
            <TextBlock x:Name="SelectedFileTextBox" Text="Файл не выбран" Height="30" Width="Auto" TextAlignment="Center" FontSize="18" Margin="0,0,0,10" Foreground="LightGray"/>
            <Button x:Name="DeflateStartButton" Content="Deflate" Height="41" Width="Auto" Click="Button_Click" FontSize="18"/>
            <ProgressBar x:Name="ProgressBar" Height="15" Width="auto" Margin="0,10,0,0"/>
        </StackPanel>
    </materialDesign:Card>
</Window>
